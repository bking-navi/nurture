<% content_for :breadcrumb do %>
  <span class="text-neutral-900">Team</span>
<% end %>

<!-- Header -->
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Team Members</h1>
  <p class="mt-2 text-sm text-gray-600">Manage your agency team and their client access</p>
</div>

<!-- Stats -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Members</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @members.count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Active</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @members.where(status: :accepted).count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Pending</dt>
            <dd class="text-2xl font-semibold text-gray-900"><%= @members.where(status: :pending).count %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Pending Invitations -->
<% if @pending_invitations.any? %>
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium text-yellow-800">
          <%= pluralize(@pending_invitations.count, 'Pending Invitation') %>
        </h3>
        <div class="mt-2 text-sm text-yellow-700 space-y-1">
          <% @pending_invitations.each do |invitation| %>
            <div class="flex items-center justify-between">
              <span>• <%= invitation.email %> (<%= invitation.role.titleize %>)</span>
              <% if Current.membership&.role&.in?(['owner', 'admin']) %>
                <%= button_to "Cancel", agency_team_invitation_path(@agency.slug, invitation),
                    method: :delete,
                    class: "text-xs text-yellow-900 hover:text-yellow-700 ml-2" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Team Members List -->
<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-5 border-b border-gray-200 flex items-center justify-between">
    <div>
      <h3 class="text-lg leading-6 font-medium text-gray-900">All Team Members</h3>
      <p class="mt-1 text-sm text-gray-500">Everyone with access to your agency</p>
    </div>
    <% if Current.membership&.role&.in?(['owner', 'admin']) %>
      <%= link_to new_agency_team_invitation_path(@agency.slug),
          class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Invite Team Member
      <% end %>
    <% end %>
  </div>
  
  <ul role="list" class="divide-y divide-gray-200">
    <% @members.each do |membership| %>
      <% user = membership.user %>
      <li class="px-6 py-5">
        <div class="flex items-center justify-between">
          <div class="flex items-center min-w-0 flex-1">
            <div class="flex-shrink-0">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-green-100 text-green-700 text-lg font-bold">
                <%= user.initials %>
              </div>
            </div>
            <div class="ml-4 flex-1 min-w-0">
              <div class="flex items-center gap-3">
                <p class="text-base font-medium text-gray-900 truncate">
                  <%= user.display_name %>
                </p>
                <% if membership.role == 'owner' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                    Owner
                  </span>
                <% elsif membership.role == 'admin' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Admin
                  </span>
                <% elsif membership.role == 'manager' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Manager
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                    Viewer
                  </span>
                <% end %>
                
                <% if membership.status == 'pending' %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                    Pending Invitation
                  </span>
                <% end %>
              </div>
              <p class="text-sm text-gray-500 truncate mt-1"><%= user.email %></p>
              <div class="mt-2 flex items-center gap-4 text-xs text-gray-500">
                <span>Joined <%= time_ago_in_words(membership.accepted_at || membership.created_at) %> ago</span>
                <% client_count = membership.agency_client_assignments.count %>
                <% if client_count > 0 %>
                  <span>•</span>
                  <span>Access to <%= pluralize(client_count, 'client') %></span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-2 ml-4">
            <% if Current.membership&.role&.in?(['owner', 'admin']) && membership.role != 'owner' %>
              <button disabled class="text-sm text-gray-400 cursor-not-allowed">
                Edit
              </button>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>


