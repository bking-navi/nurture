<% content_for :breadcrumb do %>
  <%= link_to 'Team', agency_team_path(@agency.slug), class: 'hover:text-neutral-900' %> / 
  <span class="text-neutral-900">Invite Team Member</span>
<% end %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Invite Team Member</h1>
    <p class="mt-1 text-sm text-gray-500">Add a new member to your agency team</p>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-6 py-5">
      <%= form_with model: @invitation, url: agency_team_invitations_path(@agency.slug), class: "space-y-6" do |f| %>
        <% if @invitation.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were errors with your submission
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @invitation.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <label for="agency_invitation_email" class="block text-sm font-medium text-gray-700">
            Email Address *
          </label>
          <div class="mt-1">
            <%= f.email_field :email,
                required: true,
                placeholder: "teammate@example.com",
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            We'll send an invitation email to this address
          </p>
        </div>

        <div>
          <label for="agency_invitation_role" class="block text-sm font-medium text-gray-700">
            Role *
          </label>
          <div class="mt-1">
            <%= f.select :role,
                options_for_select([
                  ['Admin - Full access', 'admin'],
                  ['Manager - Can manage clients', 'manager'],
                  ['Viewer - Read-only access', 'viewer']
                ], 'manager'),
                {},
                class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="rounded-md bg-blue-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-blue-800">What happens next?</h3>
              <div class="mt-2 text-sm text-blue-700">
                <ul class="list-disc space-y-1 pl-5">
                  <li>They'll receive an email invitation</li>
                  <li>Link expires in 7 days</li>
                  <li>They can accept and join the team</li>
                  <li>Owners/admins can assign them to clients</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", agency_team_path(@agency.slug),
              class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= f.submit "Send Invitation",
              class: "inline-flex justify-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

