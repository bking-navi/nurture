<% content_for :title, "Join #{@agency.name}" %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-green-100">
        <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h2 class="mt-6 text-3xl font-bold text-gray-900">
        You've been invited!
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        <%= @invitation.invited_by.display_name %> has invited you to join
      </p>
      <p class="mt-1 text-lg font-semibold text-gray-900">
        <%= @agency.name %>
      </p>
      <div class="mt-4 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
        Role: <%= @invitation.role.titleize %>
      </div>
    </div>

    <% if flash[:error] %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-800"><%= flash[:error] %></p>
          </div>
        </div>
      </div>
    <% end %>

    <% if @existing_user %>
      <!-- Existing User - Simple Accept -->
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <p class="text-sm text-gray-600 mb-4">
            You're signed in as <strong><%= current_user.email %></strong>
          </p>
          
          <%= form_with url: process_agency_team_invitation_path(@invitation.token), method: :post do |f| %>
            <%= f.submit "Accept Invitation",
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
          
          <div class="mt-4 text-center">
            <p class="text-xs text-gray-500">
              Not you? <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-indigo-600 hover:text-indigo-500" %> and try again
            </p>
          </div>
        </div>
      </div>
    <% else %>
      <!-- New User - Sign Up Form -->
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Create your account</h3>
          
          <%= form_with url: process_agency_team_invitation_path(@invitation.token), method: :post, class: "space-y-4" do |f| %>
            <% if @user&.errors&.any? %>
              <div class="rounded-md bg-red-50 p-4">
                <div class="text-sm text-red-800">
                  <ul class="list-disc list-inside">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>

            <div>
              <label for="user_first_name" class="block text-sm font-medium text-gray-700">
                First Name
              </label>
              <%= text_field_tag 'user[first_name]', params.dig(:user, :first_name),
                  required: true,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <label for="user_last_name" class="block text-sm font-medium text-gray-700">
                Last Name
              </label>
              <%= text_field_tag 'user[last_name]', params.dig(:user, :last_name),
                  required: true,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div>
              <label for="user_email" class="block text-sm font-medium text-gray-700">
                Email
              </label>
              <%= email_field_tag 'user[email]', @invitation.email,
                  required: true,
                  readonly: true,
                  class: "mt-1 block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <p class="mt-1 text-xs text-gray-500">This email is from your invitation and cannot be changed</p>
            </div>

            <div>
              <label for="user_password" class="block text-sm font-medium text-gray-700">
                Password
              </label>
              <%= password_field_tag 'user[password]', '',
                  required: true,
                  minlength: 8,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
              <p class="mt-1 text-xs text-gray-500">Minimum 8 characters</p>
            </div>

            <div>
              <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700">
                Confirm Password
              </label>
              <%= password_field_tag 'user[password_confirmation]', '',
                  required: true,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <%= f.submit "Create Account & Join Agency",
                class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <% end %>
          
          <div class="mt-4 text-center">
            <p class="text-xs text-gray-500">
              Already have an account? <%= link_to "Sign in", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Invitation Details -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-blue-800">What's included</h3>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc space-y-1 pl-5">
              <li>Access to <%= @agency.name %>'s workspace</li>
              <li>Collaborate with <%= @agency.users.count %> team <%= 'member'.pluralize(@agency.users.count) %></li>
              <li><%= @invitation.role.titleize %> level permissions</li>
              <% if @agency.advertisers.any? %>
                <li>Work with <%= pluralize(@agency.advertisers.count, 'client') %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center text-xs text-gray-500">
      <p>This invitation expires <%= time_ago_in_words(@invitation.expires_at) %> from now</p>
      <p class="mt-1">Expires on <%= @invitation.expires_at.strftime('%B %d, %Y at %I:%M %p') %></p>
    </div>
  </div>
</div>

