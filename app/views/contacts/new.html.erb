<!-- Breadcrumb -->
<% content_for :breadcrumb do %>
  <%= link_to @advertiser.name, advertiser_dashboard_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <%= link_to "Audience", audience_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <span class="text-neutral-900">Add Contact</span>
<% end %>

<div class="max-w-2xl">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Add Contact</h1>
    <p class="mt-1 text-sm text-gray-500">Add a new contact to your audience</p>
  </div>

  <%= form_with model: @contact, url: audience_path(@advertiser.slug), class: "space-y-6" do |f| %>
    <% if @contact.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h2>
      
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= f.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Email or phone is required</p>
        </div>

        <div>
          <%= f.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Email or phone is required</p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow sm:rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Address (Optional)</h2>
      
      <div class="space-y-4">
        <div>
          <%= f.label :address_line1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :address_line1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :address_line2, "Address Line 2", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :address_line2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
        </div>

        <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
          <div>
            <%= f.label :address_city, "City", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address_city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :address_state, "State", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address_state, maxlength: 2, placeholder: "CA", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :address_zip, "ZIP Code", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :address_zip, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <%= link_to "Cancel", audience_path(@advertiser.slug), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700" %>
      
      <%= f.submit "Add Contact", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-950 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700" %>
    </div>
  <% end %>
</div>

