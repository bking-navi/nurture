<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8">
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-indigo-100 text-indigo-600 text-2xl font-bold mb-4">
        <%= current_user.initials %>
      </div>
      
      <h2 class="text-3xl font-extrabold text-gray-900">
        Create Your Business
      </h2>
      
      <p class="mt-2 text-sm text-gray-600">
        Set up your business profile to start managing marketing campaigns
      </p>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <%= form_with model: @advertiser, url: create_advertiser_path, method: :post, local: true, class: "p-6 sm:p-10 space-y-6" do |f| %>
        <%= render "devise/shared/error_messages", resource: @advertiser %>

        <!-- Business Name -->
        <div>
          <%= f.label :name, "Business Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, 
              autofocus: true,
              placeholder: "e.g., Acme Corporation",
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">This will be visible to your team and customers</p>
        </div>

        <!-- Website URL -->
        <div>
          <%= f.label :website_url, "Website URL", class: "block text-sm font-medium text-gray-700" %>
          <%= f.url_field :website_url, 
              placeholder: "https://www.example.com",
              class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <p class="mt-1 text-xs text-gray-500">Include http:// or https://</p>
        </div>

        <!-- Address Section -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Business Address</h3>
          
          <div class="space-y-4">
            <!-- Street Address -->
            <div>
              <%= f.label :street_address, "Street Address", class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :street_address, 
                  placeholder: "123 Main Street",
                  class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <!-- City, State, Postal Code -->
            <div class="grid grid-cols-6 gap-4">
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :city, 
                    placeholder: "New York",
                    class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>

              <div class="col-span-6 sm:col-span-2">
                <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :state, 
                    placeholder: "NY",
                    maxlength: 2,
                    class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>

              <div class="col-span-6 sm:col-span-1">
                <%= f.label :postal_code, "ZIP", class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :postal_code, 
                    placeholder: "10001",
                    class: "mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>
            </div>

            <!-- Country -->
            <div>
              <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
              <%= f.select :country, 
                  [['United States', 'US'], ['Canada', 'CA'], ['United Kingdom', 'GB'], ['Australia', 'AU']],
                  { selected: 'US' },
                  class: "mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <%= link_to "Cancel", root_path, class: "text-sm font-medium text-gray-700 hover:text-gray-500" %>
          
          <%= f.submit "Create Business",
              class: "ml-3 inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
