<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-indigo-100 text-indigo-600 text-2xl font-bold mb-4">
        <%= current_user.initials %>
      </div>
      <h2 class="text-3xl font-extrabold text-gray-900">
        Welcome, <%= current_user.first_name %>!
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Email verified successfully
      </p>
    </div>

    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center space-y-4">
        <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
          <p class="text-sm text-yellow-800">
            <strong>Coming Soon:</strong> Advertiser account creation (Slice 2)
          </p>
        </div>
        
        <%= link_to "Go to Dashboard", root_path, 
            data: { turbo: false },
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>
