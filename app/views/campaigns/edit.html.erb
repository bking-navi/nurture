<% content_for :breadcrumb do %>
  <%= link_to campaigns_path(@advertiser.slug), class: "hover:text-neutral-900 transition-colors" do %>
    Campaigns
  <% end %>
  <span class="mx-1.5 text-neutral-400">/</span>
  <span class="text-neutral-900"><%= @campaign.name %></span>
<% end %>

<div class="min-h-screen bg-gray-50">
  <!-- Main Content -->
  <div class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <!-- Header with Actions -->
    <div class="mb-6 flex items-start justify-between">
      <div class="flex-1">
        <h2 class="text-2xl font-bold text-gray-900"><%= @campaign.name %></h2>
        <div class="mt-1 flex items-center space-x-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
            Draft
          </span>
          <span class="text-sm text-gray-500">•</span>
          <span class="text-sm text-gray-500"><%= @campaign.recipient_count %> recipients</span>
          <% if @campaign.estimated_cost_cents > 0 %>
            <span class="text-sm text-gray-500">•</span>
            <span class="text-sm text-gray-500">Est. <%= number_to_currency(@campaign.estimated_cost_dollars) %></span>
          <% end %>
        </div>
      </div>
      
      <!-- Actions -->
      <div class="flex items-center space-x-3">
        <!-- Kebab Menu -->
        <div class="relative" data-controller="dropdown">
          <button type="button" 
                  data-action="click->dropdown#toggle click@window->dropdown#hide"
                  class="inline-flex items-center p-2 border border-gray-300 shadow-sm rounded-md text-gray-400 bg-white hover:bg-gray-50">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div data-dropdown-target="menu" 
               class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50">
            <div class="py-1">
              <%= button_to campaign_path(@advertiser.slug, @campaign), 
                  method: :delete, 
                  data: { turbo_confirm: "Are you sure? This cannot be undone." }, 
                  class: "w-full text-left px-4 py-2 text-sm text-red-700 hover:bg-red-50 flex items-center gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete Campaign
              <% end %>
            </div>
          </div>
        </div>
        
        <%= link_to "Save Draft", campaigns_path(@advertiser.slug), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <% if @current_tab != 'review' %>
          <%= link_to "Continue →", edit_campaign_path(@advertiser.slug, @campaign, tab: @current_tab == 'recipients' ? 'design' : 'review'), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        <% end %>
      </div>
    </div>

    <!-- Tab Navigation -->
    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8 px-6" aria-label="Tabs">
          <%= link_to edit_campaign_path(@advertiser.slug, @campaign, tab: 'recipients'), 
              class: "#{@current_tab == 'recipients' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
            Recipients
          <% end %>
          <%= link_to edit_campaign_path(@advertiser.slug, @campaign, tab: 'design'), 
              class: "#{@current_tab == 'design' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
            Design
          <% end %>
          <%= link_to edit_campaign_path(@advertiser.slug, @campaign, tab: 'review'), 
              class: "#{@current_tab == 'review' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm" do %>
            Review & Send
          <% end %>
        </nav>
      </div>

      <!-- Tab Content -->
      <div class="p-6">
        <% if @current_tab == 'recipients' %>
          <%= render 'campaigns/tabs/recipients', campaign: @campaign, advertiser: @advertiser %>
        <% elsif @current_tab == 'design' %>
          <%= render 'campaigns/tabs/design', campaign: @campaign, advertiser: @advertiser %>
        <% elsif @current_tab == 'review' %>
          <%= render 'campaigns/tabs/review', campaign: @campaign, advertiser: @advertiser %>
        <% end %>
      </div>
    </div>
  </div>
</div>

