<!-- Color Palette Selection -->
<div class="mb-8" data-controller="auto-submit">
  <h3 class="text-lg font-medium text-gray-900 mb-4">Choose Your Colors</h3>
  <p class="text-sm text-gray-600 mb-6">Select a color palette that matches your brand</p>
  
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
    <% @color_palettes.each do |palette| %>
      <label class="relative cursor-pointer group">
        <%= f.radio_button :color_palette_id, 
              palette.id,
              checked: campaign.color_palette_id == palette.id,
              class: "peer sr-only",
              data: { action: "change->auto-submit#submit change->preview-updater#update" } %>
        
        <div class="border-2 rounded-lg p-3 transition-all peer-checked:border-gray-700 peer-checked:ring-2 peer-checked:ring-gray-700 hover:border-gray-400 bg-white">
          <!-- Color swatches -->
          <div class="grid grid-cols-4 gap-1 mb-3">
            <% [:primary, :secondary, :accent, :cta_bg].each do |color_key| %>
              <div class="aspect-square rounded" style="background-color: <%= palette.color(color_key) %>;"></div>
            <% end %>
          </div>
          
          <!-- Palette name -->
          <div class="text-sm font-medium text-gray-900"><%= palette.name %></div>
          <% if palette.is_default %>
            <span class="inline-block mt-1 px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              Popular
            </span>
          <% end %>
          
          <!-- Selected indicator -->
          <div class="hidden peer-checked:flex absolute top-2 right-2 items-center justify-center w-5 h-5 bg-gray-950 rounded-full">
            <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
      </label>
    <% end %>
  </div>
</div>

<!-- Customize Content + Live Preview -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Left: Form Fields -->
  <div class="space-y-6">
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-4">Customize Your Content</h3>
      <p class="text-sm text-gray-600 mb-6">Fill in your postcard details. Company info is added automatically.</p>
    </div>
    
    <!-- Front Side Fields -->
    <% if campaign.postcard_template.present? %>
      <div class="space-y-4">
        <h4 class="text-md font-medium text-gray-900 flex items-center">
          <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-indigo-100 text-gray-950 text-sm font-semibold mr-2">F</span>
          Front Side
        </h4>
        
        <% campaign.postcard_template.front_field_configs.take(5).each do |field| %>
          <%= render partial: 'campaigns/tabs/field_input', 
                     locals: { 
                       field: field, 
                       campaign: campaign, 
                       f: f,
                       update_preview: true 
                     } %>
        <% end %>
        
        <!-- Toggle for more fields -->
        <% if campaign.postcard_template.front_field_configs.length > 5 %>
          <div data-controller="toggle">
            <div data-toggle-target="content" class="hidden space-y-4 pt-4">
              <% campaign.postcard_template.front_field_configs.drop(5).each do |field| %>
                <%= render partial: 'campaigns/tabs/field_input', 
                           locals: { 
                             field: field, 
                             campaign: campaign, 
                             f: f,
                             update_preview: true 
                           } %>
              <% end %>
            </div>
            <button type="button" 
                    data-action="toggle#toggle"
                    data-toggle-target="button"
                    class="mt-2 text-sm font-medium text-gray-950 hover:text-gray-700">
              + Show more fields
            </button>
          </div>
        <% end %>
      </div>
      
      <!-- Back Side Fields -->
      <div class="space-y-4 pt-6 border-t">
        <h4 class="text-md font-medium text-gray-900 flex items-center">
          <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-purple-100 text-purple-600 text-sm font-semibold mr-2">B</span>
          Back Side
        </h4>
        
        <% campaign.postcard_template.back_field_configs.take(5).each do |field| %>
          <%= render partial: 'campaigns/tabs/field_input', 
                     locals: { 
                       field: field, 
                       campaign: campaign, 
                       f: f,
                       update_preview: true 
                     } %>
        <% end %>
        
        <!-- Toggle for more fields -->
        <% if campaign.postcard_template.back_field_configs.length > 5 %>
          <div data-controller="toggle">
            <div data-toggle-target="content" class="hidden space-y-4 pt-4">
              <% campaign.postcard_template.back_field_configs.drop(5).each do |field| %>
                <%= render partial: 'campaigns/tabs/field_input', 
                           locals: { 
                             field: field, 
                             campaign: campaign, 
                             f: f,
                             update_preview: true 
                           } %>
              <% end %>
            </div>
            <button type="button" 
                    data-action="toggle#toggle"
                    data-toggle-target="button"
                    class="mt-2 text-sm font-medium text-gray-950 hover:text-gray-700">
              + Show more fields
            </button>
          </div>
        <% end %>
      </div>
      
      <!-- Merge Variables Info -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Personalization Tips</h3>
            <div class="mt-2 text-sm text-blue-700">
              <p class="mb-1">Use these variables to personalize each postcard:</p>
              <ul class="space-y-1">
                <li><code class="bg-blue-100 px-1 rounded font-mono text-xs">{{first_name}}</code> → John</li>
                <li><code class="bg-blue-100 px-1 rounded font-mono text-xs">{{company}}</code> → Acme Corp</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Right: Live Preview -->
  <div class="lg:sticky lg:top-4 h-fit">
    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
      <div class="flex items-center justify-between mb-3">
        <h4 class="text-sm font-semibold text-gray-900">Live Preview</h4>
        <div class="flex items-center space-x-2">
          <button type="button" 
                  data-side="front"
                  data-action="preview-updater#switchSide"
                  class="px-3 py-1 text-xs font-medium rounded bg-indigo-100 text-gray-900">
            Front
          </button>
          <button type="button" 
                  data-side="back"
                  data-action="preview-updater#switchSide"
                  class="px-3 py-1 text-xs font-medium rounded bg-gray-200 text-gray-700">
            Back
          </button>
        </div>
      </div>
      
      <div class="bg-white rounded border-2 border-gray-300 aspect-[6/9] overflow-hidden" 
           data-preview-updater-target="preview">
        <iframe class="w-full h-full border-0" 
                style="transform: scale(0.5); transform-origin: top left; width: 200%; height: 200%;"
                srcdoc="<div style='padding: 40px; text-align: center; color: #999; font-family: sans-serif;'>Loading preview...</div>"></iframe>
      </div>
      
      <p class="mt-2 text-xs text-gray-500 text-center">Preview updates as you type</p>
    </div>
  </div>
</div>

<!-- Continue Button -->
<div class="flex items-center justify-between pt-6 border-t">
  <%= link_to edit_campaign_path(advertiser.slug, campaign, tab: 'recipients'), 
        class: "text-sm font-medium text-gray-700 hover:text-gray-900" do %>
    ← Back to Recipients
  <% end %>
  
  <%= f.submit "Save & Continue", 
        class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-gray-950 hover:bg-gray-900" %>
</div>

