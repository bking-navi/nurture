<div class="h-screen flex items-center justify-center px-4 py-20 sm:px-8 lg:px-20">
  <div class="bg-white rounded-lg w-full h-full flex flex-col lg:flex-row relative overflow-hidden">
    <!-- Left Column - Success Message -->
    <div class="w-full lg:w-1/2 p-8 sm:p-12 lg:p-16 flex flex-col justify-center overflow-y-auto">
      <div class="max-w-md mx-auto w-full">
        <!-- Success Icon -->
        <div class="flex justify-center mb-6">
          <div class="flex items-center justify-center h-16 w-16 rounded-full bg-green-100">
            <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>

        <!-- Title -->
        <h1 class="font-inter text-[30px] font-bold leading-9 text-neutral-700 text-center mb-2">
          Account Created!
        </h1>
        
        <p class="font-inter text-base text-neutral-600 text-center mb-6">
          We've sent a verification email to your inbox.
        </p>

        <!-- Info Box -->
        <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-[#ff6900] mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="font-inter text-sm font-semibold text-[#ff6900] mb-1.5">
                What's next?
              </h3>
              <div class="font-inter text-sm text-neutral-700 space-y-0.5">
                <p>1. Check your email inbox</p>
                <p>2. Click the verification link</p>
                <p>3. You'll be redirected to complete your profile</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <p class="font-inter text-sm text-neutral-600 text-center">
            Didn't receive the email?
          </p>
          
          <%= link_to "Resend verification email", new_user_confirmation_path, 
              data: { turbo: false },
              class: "w-full flex justify-center py-2 px-3 bg-[#ff6900] hover:bg-[#e55f00] text-white rounded-md font-inter text-base font-medium focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ff6900] transition-colors" %>
          
          <%= link_to "Back to home", root_path, 
              data: { turbo: false },
              class: "w-full flex justify-center py-2 px-3 border border-neutral-300 rounded-md font-inter text-base font-medium text-neutral-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-300 transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Right Column - Gradient Background -->
    <div class="hidden lg:block lg:w-1/2 relative">
      <div class="absolute inset-0 m-10 rounded-xl overflow-hidden bg-gradient-to-br from-[#4a4a82] via-[#7d5a7d] to-[#ff6900] opacity-90">
        <!-- Decorative gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-[#3d4d7a] via-[#8d6a6d] to-[#ff8533] opacity-60"></div>
      </div>
    </div>
  </div>
</div>
