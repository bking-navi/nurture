<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Invitation Info -->
    <div class="text-center">
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-indigo-100 text-indigo-600 mb-4">
        <svg class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
      </div>
      
      <h2 class="text-3xl font-extrabold text-gray-900">
        You're Invited!
      </h2>
      
      <div class="mt-4 bg-white shadow sm:rounded-lg p-6">
        <p class="text-sm text-gray-600">
          <strong><%= @invitation.invited_by.display_name %></strong> has invited you to join
        </p>
        <p class="mt-2 text-xl font-semibold text-gray-900">
          <%= @advertiser.name %>
        </p>
        <div class="mt-4">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
            <%= @invitation.role.titleize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Existing User Acceptance -->
    <% if @existing_user %>
      <div class="bg-white shadow sm:rounded-lg p-6">
        <div class="text-center space-y-4">
          <p class="text-sm text-gray-600">
            You're signed in as <strong><%= current_user.email %></strong>
          </p>
          
          <%= form_with url: process_invitation_path(@invitation.token), method: :post, local: true do %>
            <%= button_tag type: "submit",
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Accept Invitation
            <% end %>
          <% end %>

          <p class="text-xs text-gray-500">
            Not you? <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-indigo-600 hover:text-indigo-500" %> first
          </p>
        </div>
      </div>
    <% else %>
      <!-- New User Signup Form -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4 text-center">Create Your Account</h3>
        
        <%= form_with url: process_invitation_path(@invitation.token), method: :post, local: true, class: "space-y-6" do |f| %>
          <% if @user&.errors&.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    Please fix the following errors:
                  </h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" 
                   value="<%= @invitation.email %>" 
                   disabled
                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50 text-gray-500 sm:text-sm">
          </div>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= label_tag 'user[first_name]', 'First Name', class: 'block text-sm font-medium text-gray-700' %>
              <%= text_field_tag 'user[first_name]', @user&.first_name,
                  autofocus: true,
                  required: true,
                  class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            </div>
            <div>
              <%= label_tag 'user[last_name]', 'Last Name', class: 'block text-sm font-medium text-gray-700' %>
              <%= text_field_tag 'user[last_name]', @user&.last_name,
                  required: true,
                  class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            </div>
          </div>

          <div>
            <%= label_tag 'user[password]', 'Password', class: 'block text-sm font-medium text-gray-700' %>
            <%= password_field_tag 'user[password]', nil,
                required: true,
                class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
            <p class="mt-1 text-xs text-gray-500">Minimum 12 characters</p>
          </div>

          <div>
            <%= label_tag 'user[password_confirmation]', 'Confirm Password', class: 'block text-sm font-medium text-gray-700' %>
            <%= password_field_tag 'user[password_confirmation]', nil,
                required: true,
                class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
          </div>

          <div>
            <%= button_tag type: "submit",
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              Create Account & Join Team
            <% end %>
          </div>

          <p class="text-xs text-center text-gray-500">
            Already have an account? <%= link_to "Sign in", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500" %>
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- Expiration Notice -->
    <p class="text-xs text-center text-gray-500">
      This invitation expires on <%= @invitation.expires_at.strftime('%B %d, %Y at %I:%M %p') %>
    </p>
  </div>
</div>

