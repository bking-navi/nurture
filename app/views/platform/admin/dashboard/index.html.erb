<% content_for :page_title, 'Dashboard' %>

<!-- Stats Cards -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-3 mb-8">
  <!-- Advertisers Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Advertisers</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @advertisers_count %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to platform_admin_advertisers_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
        View all →
      <% end %>
    </div>
  </div>

  <!-- Agencies Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Agencies</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @agencies_count %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to platform_admin_agencies_path, class: "text-sm font-medium text-green-600 hover:text-green-500" do %>
        View all →
      <% end %>
    </div>
  </div>

  <!-- Users Count -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
            <dd class="text-3xl font-semibold text-gray-900"><%= @users_count %></dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 px-5 py-3">
      <%= link_to platform_admin_users_path, class: "text-sm font-medium text-purple-600 hover:text-purple-500" do %>
        View all →
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Advertisers -->
<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-5 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      Recent Advertisers
    </h3>
    <p class="mt-1 text-sm text-gray-500">
      Most recently created advertisers on the platform
    </p>
  </div>
  
  <% if @recent_advertisers.any? %>
    <ul role="list" class="divide-y divide-gray-200">
      <% @recent_advertisers.each do |advertiser| %>
        <li>
          <%= link_to platform_admin_advertiser_path(advertiser), class: "block hover:bg-gray-50 transition-colors" do %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3">
                    <div class="flex-shrink-0">
                      <div class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-indigo-100 text-indigo-700 font-bold">
                        <%= advertiser.name.first.upcase %>
                      </div>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= advertiser.name %>
                      </p>
                      <p class="text-sm text-gray-500 truncate">
                        <%= advertiser.website_url %>
                      </p>
                    </div>
                  </div>
                </div>
                <div class="flex items-center gap-4">
                  <div class="text-right">
                    <p class="text-sm text-gray-500">
                      <%= pluralize(advertiser.users.count, 'member') %>
                    </p>
                    <p class="text-xs text-gray-400">
                      Created <%= time_ago_in_words(advertiser.created_at) %> ago
                    </p>
                  </div>
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    
    <div class="px-6 py-4 bg-gray-50">
      <%= link_to platform_admin_advertisers_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" do %>
        View all advertisers →
      <% end %>
    </div>
  <% else %>
    <div class="px-6 py-12 text-center">
      <p class="text-sm text-gray-500">No advertisers yet</p>
    </div>
  <% end %>
</div>

