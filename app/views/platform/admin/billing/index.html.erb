<% content_for :page_title, 'Platform Billing' %>

<div class="mb-6">
  <h2 class="text-2xl font-bold text-gray-900">Platform Billing Overview</h2>
  <p class="mt-1 text-sm text-gray-600">Monitor billing activity across all advertisers</p>
</div>

<!-- Summary Stats -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-6">
  <!-- Total Balance -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Total Balance</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900">
                $<%= '%.2f' % (@total_balance / 100.0) %>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Pending Balance (ACH) -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Pending (ACH)</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900">
                $<%= '%.2f' % (@total_pending_balance / 100.0) %>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Payment Methods -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">With Payment Methods</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900">
                <%= @advertisers_with_payment_methods %> / <%= @total_advertisers %>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <!-- Stripe Fees -->
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 truncate">Fees Absorbed</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900">
                $<%= '%.2f' % (@total_stripe_fees / 100.0) %>
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Alerts Section -->
<% if @low_balance_advertisers.any? || @pending_ach_advertisers.any? %>
  <div class="mb-6 space-y-4">
    <% if @low_balance_advertisers.any? %>
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Low Balance Alert</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p><%= pluralize(@low_balance_advertisers.count, 'advertiser') %> below low balance threshold</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if @pending_ach_advertisers.any? %>
      <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Pending ACH Transfers</h3>
            <div class="mt-2 text-sm text-blue-700">
              <p><%= pluralize(@pending_ach_advertisers.count, 'advertiser') %> with pending ACH deposits</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<!-- Advertisers Table -->
<div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Advertiser Balances</h3>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Advertiser
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Balance
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Pending
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Payment Method
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Auto-Recharge
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">View</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @advertisers.each do |advertiser| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="inline-flex items-center justify-center w-10 h-10 rounded-lg bg-indigo-100 text-indigo-700 font-bold">
                    <%= advertiser.name.first.upcase %>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= advertiser.name %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= advertiser.slug %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                $<%= '%.2f' % advertiser.balance_dollars %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if advertiser.has_pending_balance? %>
                <div class="text-sm font-medium text-yellow-600">
                  $<%= '%.2f' % advertiser.pending_balance_dollars %>
                </div>
              <% else %>
                <div class="text-sm text-gray-400">â€”</div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if advertiser.payment_method_on_file? %>
                <div class="flex items-center text-sm text-gray-900">
                  <svg class="h-4 w-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <%= advertiser.payment_method_summary %>
                </div>
              <% else %>
                <div class="flex items-center text-sm text-gray-400">
                  <svg class="h-4 w-4 text-red-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                  </svg>
                  None
                </div>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if advertiser.auto_recharge_enabled? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Disabled
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if advertiser.below_low_balance_threshold? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                  Low Balance
                </span>
              <% elsif advertiser.balance_cents == 0 %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  No Funds
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "View", platform_admin_advertiser_path(advertiser), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Recent Transactions -->
<div class="bg-white shadow overflow-hidden sm:rounded-lg">
  <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Transactions</h3>
    <p class="mt-1 text-sm text-gray-500">Last 50 transactions across all advertisers</p>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Date
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Advertiser
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Type
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Description
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Method
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Amount
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recent_transactions.each do |transaction| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= transaction.created_at.strftime('%b %d, %Y %I:%M %p') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= transaction.advertiser.name %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% case transaction.transaction_type %>
              <% when 'deposit' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Deposit
                </span>
              <% when 'charge' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Charge
                </span>
              <% when 'auto_recharge' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Auto-Recharge
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <%= transaction.description %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= transaction.payment_method_display %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <% if transaction.deposit? || transaction.auto_recharge? %>
                <span class="text-green-600">+$<%= '%.2f' % transaction.amount_dollars %></span>
              <% else %>
                <span class="text-red-600">-$<%= '%.2f' % transaction.amount_dollars %></span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= transaction.status_badge_color %>-100 text-<%= transaction.status_badge_color %>-800">
                <%= transaction.status.titleize %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

