<%= form_with model: segment, url: segment.persisted? ? segment_path(@advertiser.slug, segment) : segments_path(@advertiser.slug), class: "space-y-6" do |f| %>
  <% if segment.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There were errors with your submission:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% segment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow sm:rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Segment Details</h2>
    
    <div class="space-y-4">
      <div>
        <%= f.label :name, "Segment Name", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm", placeholder: "e.g., VIP Customers, San Francisco Shoppers" %>
      </div>

      <div>
        <%= f.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-gray-700 focus:ring-gray-700 sm:text-sm", placeholder: "Describe this segment..." %>
      </div>
    </div>
  </div>

  <%= render 'segments/segment_builder', f: f, segment: segment, preview_url: preview_segments_path(@advertiser.slug) %>

  <div class="flex items-center justify-between">
    <%= link_to "Cancel", segments_path(@advertiser.slug), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700" %>
    
    <%= f.submit segment.persisted? ? "Update Segment" : "Create Segment", class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-950 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700" %>
  </div>
<% end %>

