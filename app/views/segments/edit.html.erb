<!-- Breadcrumb -->
<% content_for :breadcrumb do %>
  <%= link_to @advertiser.name, advertiser_dashboard_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <%= link_to "Segments", segments_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <%= link_to @segment.name, segment_path(@advertiser.slug, @segment), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <span class="text-neutral-900">Edit</span>
<% end %>

<div class="max-w-4xl">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Edit Segment</h1>
    <p class="mt-1 text-sm text-gray-500">Update your segment criteria</p>
  </div>

  <%= render 'form', segment: @segment %>
</div>

