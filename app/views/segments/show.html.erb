<!-- Breadcrumb -->
<% content_for :breadcrumb do %>
  <%= link_to @advertiser.name, advertiser_dashboard_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <%= link_to "Segments", segments_path(@advertiser.slug), class: "hover:text-neutral-900" %>
  <span class="mx-1">/</span>
  <span class="text-neutral-900"><%= @segment.name %></span>
<% end %>

<!-- Flash Messages -->
<% if notice %>
  <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<!-- Header -->
<div class="mb-6 sm:flex sm:items-center sm:justify-between">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= @segment.name %></h1>
    <% if @segment.description.present? %>
      <p class="mt-1 text-sm text-gray-500"><%= @segment.description %></p>
    <% end %>
  </div>
  <div class="mt-4 sm:mt-0 flex gap-3">
    <%= link_to "Edit", edit_segment_path(@advertiser.slug, @segment), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-700" %>
    <%= button_to "Delete", segment_path(@advertiser.slug, @segment), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this segment?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  </div>
</div>

<!-- Stats -->
<div class="bg-white shadow sm:rounded-lg mb-6 p-6">
  <div class="flex items-center">
    <div class="flex-shrink-0">
      <svg class="h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>
    <div class="ml-5">
      <div class="text-3xl font-bold text-gray-900"><%= @segment.contact_count || 0 %></div>
      <div class="text-sm text-gray-500">Contacts in this segment</div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="bg-white shadow sm:rounded-lg mb-6 p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Filter Criteria</h2>
  <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
    <% if @segment.filters['source'].present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Source</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= @segment.filters['source'] == 'shopify' ? 'Shopify' : 'Manual/CSV' %>
        </dd>
      </div>
    <% end %>
    
    <% if @segment.filters['search'].present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Search</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @segment.filters['search'] %></dd>
      </div>
    <% end %>
    
    <% if @segment.filters['city'].present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">City</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @segment.filters['city'] %></dd>
      </div>
    <% end %>
    
    <% if @segment.filters['state'].present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">State</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @segment.filters['state'] %></dd>
      </div>
    <% end %>
    
    <% if @segment.filters['zip'].present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">ZIP Code</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @segment.filters['zip'] %></dd>
      </div>
    <% end %>
    
    <% if @segment.filters.values.compact.blank? %>
      <div class="sm:col-span-2">
        <p class="text-sm text-gray-500">No filters applied - includes all contacts with valid US addresses</p>
      </div>
    <% end %>
  </dl>
</div>

<!-- Contacts List -->
<div class="bg-white shadow sm:rounded-lg overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Contacts</h3>
  </div>
  
  <% if @contacts.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Name
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Email
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Location
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Source
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @contacts.each do |contact| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= contact.display_name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= contact.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                <% if contact.default_address.present? %>
                  <%= contact.default_address['city'] %>, <%= contact.default_address['state'] %>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                contact.source_type == 'ShopifyStore' ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800'
              %>">
                <%= contact.source_type == 'ShopifyStore' ? 'Shopify' : 'Manual' %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="px-6 py-12 text-center">
      <p class="text-sm text-gray-500">No contacts match this segment's criteria</p>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if @contacts.total_pages > 1 %>
  <div class="mt-6 bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 rounded-lg shadow">
    <%= paginate @contacts %>
  </div>
<% end %>

