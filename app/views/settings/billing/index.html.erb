<div class="max-w-6xl">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Billing & Balance</h1>
      <p class="mt-1 text-sm text-gray-500">Manage your prepaid balance and payment methods</p>
    </div>
    <%= link_to settings_new_deposit_path(@advertiser.slug), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Funds
    <% end %>
  </div>

  <!-- Balance Card -->
  <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg shadow-lg p-8 mb-8 text-white">
    <div class="flex items-center justify-between">
      <div class="flex-1">
        <p class="text-gray-300 text-sm font-medium">Available Balance</p>
        <p class="text-5xl font-bold mt-2"><%= number_to_currency(@balance) %></p>
        
        <% if @advertiser.has_pending_balance? %>
          <div class="mt-3 bg-white/20 rounded-lg px-3 py-2 inline-block">
            <p class="text-gray-300 text-xs font-medium">Pending (ACH Processing)</p>
            <p class="text-white text-lg font-semibold"><%= number_to_currency(@advertiser.pending_balance_dollars) %></p>
            <p class="text-gray-300 text-xs">Available in 1-4 days</p>
          </div>
        <% end %>
        
        <% if @advertiser.below_low_balance_threshold? %>
          <p class="mt-3 text-yellow-200 text-sm flex items-center">
            <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            Balance below <%= number_to_currency(@advertiser.low_balance_threshold_dollars) %> threshold
          </p>
        <% end %>
      </div>
      <div class="text-right">
        <% if @has_payment_method %>
          <div class="bg-white/20 rounded-lg px-4 py-3">
            <p class="text-gray-300 text-xs font-medium">Payment Method</p>
            <p class="text-white text-sm mt-1"><%= @advertiser.payment_method_summary %></p>
            <%= link_to "Update", settings_edit_payment_method_path(@advertiser.slug), class: "text-gray-300 hover:text-white text-xs underline mt-1 inline-block" %>
          </div>
        <% else %>
          <%= link_to settings_edit_payment_method_path(@advertiser.slug), class: "bg-white text-gray-900 px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-100" do %>
            Add Payment Method
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Settings Section -->
  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Billing Settings</h2>
    
    <%= form_with url: settings_update_billing_settings_path(@advertiser.slug), method: :patch, class: "space-y-6" do |f| %>
      <!-- Low Balance Alerts -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-sm font-medium text-gray-900 mb-3">Low Balance Alerts</h3>
        
        <div class="flex items-center justify-between mb-4">
          <div class="flex-1">
            <label class="text-sm text-gray-700">Enable email alerts</label>
            <p class="text-xs text-gray-500 mt-1">Receive an email when your balance is low</p>
          </div>
          <div class="ml-4">
            <%= f.check_box 'billing_settings[low_balance_emails_enabled]', checked: @settings[:low_balance_emails_enabled], class: "h-4 w-4 text-gray-900 focus:ring-gray-900 border-gray-300 rounded" %>
          </div>
        </div>
        
        <div>
          <label class="text-sm text-gray-700">Alert threshold</label>
          <div class="mt-1 relative rounded-md shadow-sm max-w-xs">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= f.number_field 'billing_settings[low_balance_threshold_dollars]', value: @settings[:low_balance_threshold], step: 1, min: 0, class: "focus:ring-gray-900 focus:border-gray-900 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
          </div>
          <p class="text-xs text-gray-500 mt-1">You'll be notified when your balance drops below this amount</p>
        </div>
      </div>
      
      <!-- Auto-Recharge -->
      <div>
        <h3 class="text-sm font-medium text-gray-900 mb-3">Auto-Recharge</h3>
        
        <div class="flex items-center justify-between mb-4">
          <div class="flex-1">
            <label class="text-sm text-gray-700">Enable auto-recharge</label>
            <p class="text-xs text-gray-500 mt-1">Automatically top up your balance when it runs low</p>
            <% unless @has_payment_method %>
              <p class="text-xs text-orange-600 mt-1">⚠️ Requires a payment method on file</p>
            <% end %>
          </div>
          <div class="ml-4">
            <%= f.check_box 'billing_settings[auto_recharge_enabled]', checked: @settings[:auto_recharge_enabled], disabled: !@has_payment_method, class: "h-4 w-4 text-gray-900 focus:ring-gray-900 border-gray-300 rounded" %>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="text-sm text-gray-700">Trigger threshold</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm">$</span>
              </div>
              <%= f.number_field 'billing_settings[auto_recharge_threshold_dollars]', value: @settings[:auto_recharge_threshold], step: 1, min: 0, class: "focus:ring-gray-900 focus:border-gray-900 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <p class="text-xs text-gray-500 mt-1">Auto-recharge when balance drops below</p>
          </div>
          
          <div>
            <label class="text-sm text-gray-700">Recharge amount</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm">$</span>
              </div>
              <%= f.number_field 'billing_settings[auto_recharge_amount_dollars]', value: @settings[:auto_recharge_amount], step: 1, min: 5, max: 10000, class: "focus:ring-gray-900 focus:border-gray-900 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <p class="text-xs text-gray-500 mt-1">Amount to add each time</p>
          </div>
        </div>
      </div>
      
      <div class="flex justify-end">
        <%= f.submit "Save Settings", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900" %>
      </div>
    <% end %>
  </div>

  <!-- Transaction History -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">Transaction History</h2>
    </div>
    
    <% if @transactions.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Balance</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @transactions.each do |txn| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= txn.created_at.strftime('%b %d, %Y %I:%M %p') %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= txn.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if txn.deposit? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Deposit
                    </span>
                  <% elsif txn.auto_recharge? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      Auto-Recharge
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Charge
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <%= txn.payment_method_display %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% badge_color = txn.status_badge_color %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= badge_color %>-100 text-<%= badge_color %>-800">
                    <%= txn.status.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium <%= txn.amount_cents > 0 ? 'text-green-600' : 'text-red-600' %>">
                  <%= txn.amount_cents > 0 ? '+' : '' %><%= number_to_currency(txn.amount_dollars) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                  <%= number_to_currency(txn.balance_after_dollars) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if @transactions.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-gray-200">
          <%= paginate @transactions %>
        </div>
      <% end %>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-gray-500">No transactions yet</p>
      </div>
    <% end %>
  </div>
</div>

<% if params[:payment_intent_client_secret].present? %>
<script src="https://js.stripe.com/v3/"></script>
<script>
  // Handle ACH bank verification on return
  (function() {
    const clientSecret = '<%= params[:payment_intent_client_secret] %>';
    const paymentIntentId = '<%= params[:payment_intent] %>';
    const stripe = Stripe('<%= Rails.application.credentials.dig(:stripe, :publishable_key) %>');
    
            console.log('Handling ACH payment intent:', paymentIntentId, clientSecret);

            // Confirm the payment intent (this will open Plaid modal if needed)
            stripe.handleNextAction({
              clientSecret: clientSecret
            }).then(function(result) {
              if (result.error) {
                console.error('ACH verification error:', result.error);
                alert('Bank verification failed: ' + result.error.message);
                window.location.href = '<%= settings_billing_path(@advertiser.slug) %>';
              } else {
                console.log('ACH verification completed!', result.paymentIntent);
                console.log('PaymentIntent status after handleNextAction:', result.paymentIntent.status);

                // Check if the PaymentIntent is in a valid state
                if (result.paymentIntent.status === 'requires_action') {
                  console.error('PaymentIntent still requires action after handleNextAction');
                  alert('Bank verification incomplete. Please try again or contact support.');
                  window.location.href = '<%= settings_billing_path(@advertiser.slug) %>';
                  return;
                }

                // Now tell the server to finalize the payment
                console.log('Calling server to confirm payment intent...');
        fetch('<%= settings_create_deposit_path(@advertiser.slug) %>', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
            'Accept': 'application/json'
          },
          body: JSON.stringify({
            payment_intent_id: result.paymentIntent.id
          })
        })
        .then(response => response.json())
        .then(data => {
          console.log('Server response:', data);
          if (data.success) {
            alert(data.message);
            window.location.href = '<%= settings_billing_path(@advertiser.slug) %>';
          } else {
            alert('Failed to process payment: ' + data.error);
            window.location.href = '<%= settings_billing_path(@advertiser.slug) %>';
          }
        })
        .catch(error => {
          console.error('Error confirming payment:', error);
          alert('An error occurred while processing your payment. Please contact support.');
          window.location.href = '<%= settings_billing_path(@advertiser.slug) %>';
        });
      }
    });
  })();
</script>
<% end %>

