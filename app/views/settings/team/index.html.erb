<!-- Success/Error Messages -->
    <% if notice %>
      <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
        <p class="text-sm text-green-800"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="mb-6 bg-red-50 border border-red-200 rounded-md p-4">
        <p class="text-sm text-red-800"><%= alert %></p>
      </div>
    <% end %>

<!-- Header with Invite Button -->
<div class="mb-6 sm:flex sm:items-center sm:justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">Team Members</h2>
        <p class="mt-1 text-sm text-gray-500">Manage your team and invite new members</p>
      </div>
      <% if @can_manage_team %>
        <div class="mt-4 sm:mt-0">
          <%= link_to settings_team_new_invitation_path(@advertiser.slug), 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
            </svg>
            Invite Team Member
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Current Members -->
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Current Members</h3>
      </div>
      <ul role="list" class="divide-y divide-gray-200">
        <% @members.each do |membership| %>
          <li class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-indigo-100 text-indigo-600 text-sm font-bold">
                    <%= membership.user.initials %>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= membership.user.display_name %>
                    <% if membership.user == current_user %>
                      <span class="ml-2 text-xs text-gray-500">(You)</span>
                    <% end %>
                  </div>
                  <div class="text-sm text-gray-500"><%= membership.user.email %></div>
                </div>
              </div>
              <div class="flex items-center space-x-3">
                <% if @can_manage_team && membership.user != current_user && membership.role != 'owner' %>
                  <!-- Role dropdown for team managers (excluding owner) -->
                  <%= form_with url: settings_update_member_role_path(@advertiser.slug, membership), method: :patch, class: "inline-block" do |f| %>
                    <%= f.select :role, 
                        options_for_select(
                          [
                            ['Admin', 'admin'],
                            ['Manager', 'manager'],
                            ['Viewer', 'viewer']
                          ],
                          membership.role
                        ),
                        {},
                        {
                          class: "rounded-md border-gray-300 text-sm focus:border-indigo-500 focus:ring-indigo-500",
                          onchange: "this.form.requestSubmit()"
                        } %>
                  <% end %>
                  
                  <!-- Remove button -->
                  <% unless membership.role == 'owner' || (@membership.role == 'admin' && membership.role == 'admin') %>
                    <%= button_to settings_remove_team_member_path(@advertiser.slug, membership),
                        method: :delete,
                        data: { confirm: "Are you sure you want to remove #{membership.user.display_name} from the team?" },
                        class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                      Remove
                    <% end %>
                  <% end %>
                <% else %>
                  <!-- Static role badge for non-managers, current user, or owner -->
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                    case membership.role
                    when 'owner' then 'bg-purple-100 text-purple-800'
                    when 'admin' then 'bg-blue-100 text-blue-800'
                    when 'manager' then 'bg-green-100 text-green-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                    <%= membership.role.titleize %>
                  </span>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Pending Invitations -->
    <% if @pending_invitations.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Invitations</h3>
          <p class="mt-1 text-sm text-gray-500">Invitations that haven't been accepted yet</p>
        </div>
        <ul role="list" class="divide-y divide-gray-200">
          <% @pending_invitations.each do |invitation| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="text-sm font-medium text-gray-900"><%= invitation.email %></div>
                  <div class="mt-1 text-xs text-gray-500">
                    Invited by <%= invitation.invited_by.display_name %> â€¢ 
                    Expires <%= time_ago_in_words(invitation.expires_at) %> from now
                  </div>
                </div>
                <div class="flex items-center space-x-3">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <%= invitation.role.titleize %>
                  </span>
                  <% if @can_manage_team %>
                    <%= button_to "Resend", settings_team_resend_invitation_path(@advertiser.slug, invitation), 
                        method: :post,
                        class: "text-sm text-indigo-600 hover:text-indigo-900" %>
                    <%= button_to "Cancel", settings_team_invitation_path(@advertiser.slug, invitation), 
                        method: :delete,
                        data: { confirm: "Are you sure you want to cancel this invitation?" },
                        class: "text-sm text-red-600 hover:text-red-900" %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
