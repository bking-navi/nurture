<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to settings_team_path(@advertiser.slug), class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Team
    <% end %>
  </div>

  <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">Invite Team Member</h3>

        <%= form_with model: @invitation, url: settings_team_invitations_path(@advertiser.slug), method: :post, local: true, class: "space-y-6" do |f| %>
          <%= render "devise/shared/error_messages", resource: @invitation %>

          <!-- Email Field -->
          <div>
            <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, 
                autofocus: true,
                placeholder: "colleague@example.com",
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <p class="mt-2 text-sm text-gray-500">
              They'll receive an invitation to join <%= @advertiser.name %>
            </p>
          </div>

          <!-- Role Selection -->
          <div>
            <%= f.label :role, "Role", class: "block text-sm font-medium text-gray-700" %>
            <%= f.select :role, 
                [
                  ['Viewer - Can view campaigns and data', 'viewer'],
                  ['Manager - Can create and edit campaigns', 'manager'],
                  ['Admin - Can manage team and settings', 'admin']
                ],
                {},
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>

          <!-- Role Descriptions -->
          <div class="bg-gray-50 rounded-md p-4">
            <h4 class="text-sm font-medium text-gray-900 mb-2">Role Permissions</h4>
            <dl class="space-y-2 text-sm text-gray-600">
              <div>
                <dt class="font-medium text-gray-900">Viewer</dt>
                <dd class="ml-4">• View campaigns and contacts</dd>
              </div>
              <div>
                <dt class="font-medium text-gray-900">Manager</dt>
                <dd class="ml-4">• Everything Viewer can do</dd>
                <dd class="ml-4">• Create and edit campaigns</dd>
                <dd class="ml-4">• Manage contacts</dd>
              </div>
              <div>
                <dt class="font-medium text-gray-900">Admin</dt>
                <dd class="ml-4">• Everything Manager can do</dd>
                <dd class="ml-4">• Invite and remove team members</dd>
                <dd class="ml-4">• Change member roles</dd>
                <dd class="ml-4">• Update business settings</dd>
              </div>
            </dl>
          </div>

          <!-- Submit Button -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200">
            <%= link_to "Cancel", settings_team_path(@advertiser.slug), 
                class: "text-sm font-medium text-gray-700 hover:text-gray-500" %>
            
            <%= f.submit "Send Invitation",
                class: "inline-flex justify-center py-2 px-6 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
