<div class="bg-white shadow sm:rounded-lg p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4">Digital Proof</h2>
  
  <% if creative.pending_approval? && creative.lob_proof_url.present? %>
    <!-- Proof is ready for review -->
    <div class="space-y-4">
      <p class="text-sm text-gray-600">Review the digital proof below and approve or reject it.</p>
      
      <!-- Proof iframe -->
      <div class="border border-gray-300 rounded-lg overflow-hidden bg-gray-50">
        <iframe 
          src="<%= creative.lob_proof_url %>" 
          class="w-full h-[600px]"
          frameborder="0">
        </iframe>
      </div>
      
      <div class="text-xs text-gray-500">
        <a href="<%= creative.lob_proof_url %>" target="_blank" class="text-blue-600 hover:text-blue-800">Open proof in new tab →</a>
      </div>
      
      <!-- Approve/Reject Actions -->
      <div class="flex items-center justify-between pt-4 border-t">
        <div>
          <%= button_to "Approve", approve_creative_path(advertiser.slug, creative), 
              method: :post,
              class: "inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        </div>
        
        <div>
          <button type="button" 
                  onclick="document.getElementById('reject-form-<%= creative.id %>').classList.toggle('hidden')"
                  class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            Reject
          </button>
        </div>
      </div>
      
      <!-- Reject Form (hidden by default) -->
      <div id="reject-form-<%= creative.id %>" class="hidden pt-4 border-t">
        <%= form_with url: reject_creative_path(advertiser.slug, creative), method: :post, local: true do |f| %>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Reason for rejection</label>
              <%= text_area_tag :reason, nil, 
                  rows: 3, 
                  placeholder: "Please explain why this creative is being rejected...",
                  class: "block w-full shadow-sm focus:ring-red-500 focus:border-red-500 sm:text-sm border-gray-300 rounded-md",
                  required: true %>
            </div>
            <div class="flex justify-end">
              <%= f.submit "Submit Rejection", 
                  class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700",
                  data: { confirm: "Are you sure you want to reject this creative?" } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  <% elsif creative.pending_approval? && creative.lob_proof_url.blank? %>
    <!-- Proof is being generated -->
    <div class="text-center py-8">
      <svg class="animate-spin h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-sm font-medium text-gray-900">Generating proof...</p>
      <p class="text-xs text-gray-500 mt-1">This usually takes 10-30 seconds</p>
      <p class="text-xs text-gray-500 mt-2">
        <a href="#" onclick="window.location.reload()" class="text-blue-600 hover:text-blue-800">Refresh page</a>
      </p>
    </div>
    
  <% elsif creative.approved? %>
    <!-- Approved -->
    <div class="rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">Approved</h3>
          <div class="mt-2 text-sm text-green-700">
            <p>
              Approved by <%= creative.approved_by_user&.first_name %> <%= creative.approved_by_user&.last_name %>
              on <%= creative.approved_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          </div>
          <% if creative.lob_proof_url.present? %>
            <div class="mt-3">
              <a href="<%= creative.lob_proof_url %>" target="_blank" class="text-sm font-medium text-green-800 hover:text-green-600">
                View proof →
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
  <% elsif creative.failed_validation? %>
    <!-- Failed validation -->
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Validation Failed</h3>
          <div class="mt-2 text-sm text-red-700">
            <p><%= creative.rejection_reason %></p>
          </div>
          <div class="mt-4">
            <%= button_to "Retry Proof Generation", regenerate_proof_creative_path(advertiser.slug, creative),
                method: :post,
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
          </div>
        </div>
      </div>
    </div>
    
  <% elsif creative.approval_status == 'rejected' %>
    <!-- Rejected -->
    <div class="rounded-md bg-yellow-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">Rejected</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p><strong>Reason:</strong> <%= creative.rejection_reason %></p>
            <p class="mt-2">Please edit the creative and upload new PDFs to regenerate the proof.</p>
          </div>
          <div class="mt-4">
            <%= link_to "Edit Creative", edit_creative_path(advertiser.slug, creative),
                class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200" %>
          </div>
        </div>
      </div>
    </div>
    
  <% end %>
</div>

