<%= turbo_stream_from "creative_#{@creative.id}_proof" %>

<div class="px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <div class="flex items-center justify-between mb-2">
      <h1 class="text-3xl font-bold text-gray-900"><%= @creative.name %></h1>
      <div class="flex items-center space-x-3">
        <%= link_to "Edit", edit_creative_path(@advertiser.slug, @creative), class: "inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
        <%= button_to "Delete", creative_path(@advertiser.slug, @creative), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this creative?" } }, class: "inline-flex items-center px-3 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50" %>
      </div>
    </div>
    <%= link_to "← Back to Library", creatives_path(@advertiser.slug), class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>

  <!-- Approval Status Banner -->
  <% if @creative.pending_approval? %>
    <div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            <strong>Proof approval required.</strong> This creative cannot be used in campaigns until approved.
          </p>
        </div>
      </div>
    </div>
  <% elsif @creative.failed_validation? %>
    <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-red-700">
            <strong>Validation failed.</strong> This creative could not be validated with Lob. Please check the error below.
          </p>
        </div>
      </div>
    </div>
  <% elsif @creative.approval_status == 'rejected' %>
    <div class="mb-6 bg-orange-50 border-l-4 border-orange-400 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-orange-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-orange-700">
            <strong>Creative rejected.</strong> Please update the PDFs and resubmit for approval.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Preview Column -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Proof Approval Section -->
      <div id="proof-approval-section">
        <%= render 'proof_approval', creative: @creative, advertiser: @advertiser %>
      </div>
      
      <!-- Thumbnail/Preview -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Preview</h2>
        <div class="aspect-[2/3] max-w-md mx-auto bg-gray-100 rounded-lg overflow-hidden flex items-center justify-center">
          <% if @creative.thumbnail.attached? %>
            <%= image_tag @creative.thumbnail, class: "w-full h-full object-contain" %>
          <% elsif @creative.front_pdf.attached? %>
            <div class="flex flex-col items-center justify-center text-gray-400 p-8 text-center">
              <svg class="h-20 w-20 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              <p class="text-sm">Thumbnail is being generated...</p>
              <p class="text-xs mt-2">Refresh the page in a few moments</p>
            </div>
          <% else %>
            <svg class="h-20 w-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          <% end %>
        </div>
      </div>

      <!-- PDF Downloads -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">PDF Files</h2>
        <div class="space-y-3">
          <% if @creative.front_pdf.attached? %>
            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
              <div class="flex items-center">
                <svg class="h-8 w-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Front PDF</p>
                  <p class="text-xs text-gray-500"><%= number_to_human_size(@creative.front_pdf.byte_size) %></p>
                </div>
              </div>
              <%= link_to "Download", rails_blob_path(@creative.front_pdf, disposition: "attachment"), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          <% end %>

          <% if @creative.back_pdf.attached? %>
            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
              <div class="flex items-center">
                <svg class="h-8 w-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900">Back PDF</p>
                  <p class="text-xs text-gray-500"><%= number_to_human_size(@creative.back_pdf.byte_size) %></p>
                </div>
              </div>
              <%= link_to "Download", rails_blob_path(@creative.back_pdf, disposition: "attachment"), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          <% else %>
            <div class="p-3 bg-gray-50 border border-gray-200 rounded-lg">
              <p class="text-sm text-gray-600">No back PDF - will use template default</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Usage History -->
      <% if @campaigns.any? %>
        <div class="bg-white shadow sm:rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Recent Campaigns</h2>
          <div class="space-y-3">
            <% @campaigns.each do |campaign| %>
              <%= link_to campaign_path(@advertiser.slug, campaign), class: "block p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors" do %>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm font-medium text-gray-900"><%= campaign.name %></p>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= campaign.status.titleize %> • <%= campaign.recipient_count %> recipients
                    </p>
                  </div>
                  <span class="text-xs text-gray-500">
                    <%= time_ago_in_words(campaign.created_at) %> ago
                  </span>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Info Column -->
    <div class="space-y-6">
      <!-- Stats -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Usage Stats</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Times Used</dt>
            <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @creative.usage_count %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Last Used</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @creative.last_used_at %>
                <%= time_ago_in_words(@creative.last_used_at) %> ago
              <% else %>
                <span class="text-gray-500">Never</span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @creative.created_at.strftime("%b %d, %Y") %>
            </dd>
          </div>
          <% if @creative.created_by_user %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Created By</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @creative.created_by_user.first_name %> <%= @creative.created_by_user.last_name %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Details -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Details</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Postcard Size</dt>
            <dd class="mt-1 text-sm text-gray-900">6x9</dd>
          </div>
          
          <% if @creative.description.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @creative.description %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @creative.status == 'active' %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Active
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  Archived
                </span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Tags -->
      <% if @creative.tags.any? %>
        <div class="bg-white shadow sm:rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Tags</h2>
          <div class="flex flex-wrap gap-2">
            <% @creative.tags.each do |tag| %>
              <%= link_to tag, creatives_path(@advertiser.slug, tag: tag), class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800 hover:bg-gray-200" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="bg-white shadow sm:rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Actions</h2>
        <div class="space-y-2">
          <%= link_to campaigns_path(@advertiser.slug), class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            Use in New Campaign
          <% end %>
          
          <% if @creative.status == 'active' %>
            <%= button_to "Archive", creative_path(@advertiser.slug, @creative), method: :patch, params: { creative: { status: 'archived' } }, class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <% else %>
            <%= button_to "Restore", creative_path(@advertiser.slug, @creative), method: :patch, params: { creative: { status: 'active' } }, class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
